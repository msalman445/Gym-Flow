<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivDrawerHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/gym_header"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tvHeaderEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="muhammadsalmanalam140@gmail.com"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@id/ivDrawerHeader"
        app:layout_constraintLeft_toLeftOf="@id/ivDrawerHeader"
        />
        <TextView
            android:id="@+id/tvHeaderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muhammad Salman"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@id/tvHeaderEmail"
        app:layout_constraintLeft_toLeftOf="@id/ivDrawerHeader"
        />




</androidx.constraintlayout.widget.ConstraintLayout>